{
  "name": "api-auditor",
  "version": "0.0.1",
  "description": "NodeJS library for integration testing",
  "type": "module",
  "private": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amakovskyi/api-auditor.git"
  },
  "author": "amakovskyi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amakovskyi/api-auditor/issues"
  },
  "homepage": "https://github.com/amakovskyi/api-auditor#readme",
  "dependencies": {
    "ts-node": "^10.7.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.26",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "testTimeout": 10000
  }
}
